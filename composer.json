{
    "name": "gitiki/gitiki",
    "description": "PHP wiki engine from markdown files and a Git repository (or not)",
    "license": "MIT",
    "homepage": "http://gitiki.org/",
    "keywords": ["gitiki", "wiki", "markdown", "git"],
    "authors": [
        {
            "name": "Francis Besset",
            "email": "francis.besset@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.4",
        "ext-dom": "*",
        "ext-intl": "*",

        "erusev/parsedown": "1.5.*",
        "silex/silex": "1.3.*",
        "symfony/expression-language": "~2.7",
        "symfony/translation": "~2.7",
        "symfony/twig-bridge": "~2.7",
        "symfony/yaml": "~2.7",
        "twig/twig": "~1.18",
        "yohang/htmltools": "~0.1"
    },
    "suggest": {
        "ext-gd": "Resize and crop image",
        "gitiki/code-highlight": "Highlight code blocks with highlight.js library",
        "gitiki/redirector": "Redirect an old page to new one"
    },
    "autoload": {
        "psr-4": { "Gitiki\\": "src/" }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
